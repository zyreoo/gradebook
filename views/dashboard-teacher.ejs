<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard - Online Gradebook</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1>Teacher Dashboard</h1>
            <div class="user-info">
                <p><strong>Welcome, <%= user.name %>!</strong></p>
                <p>Email: <%= user.email %></p>
                <p>Role: <%= user.role %></p>
            </div>
        </div>

        <div class="section">
            <h2>Quick Actions</h2>
            <div class="action-grid">
                <a href="/students" class="action-card">
                    <div class="action-icon">ðŸ‘¥</div>
                    <h3>View All Students</h3>
                    <p>See complete list with details</p>
                </a>
            </div>
        </div>

        <div class="section">
            <h2>Students (<%= students.length %>)</h2>
            <% if (students.length === 0) { %>
                <div class="empty-state">
                    <p>No students yet. They'll show up here once they register.</p>
                </div>
            <% } else { %>
                <div class="students-grid">
                    <% students.forEach(function(student) { %>
                        <div class="student-card">
                            <div class="student-avatar">
                                <%= student.name.charAt(0).toUpperCase() %>
                            </div>
                            <div class="student-info">
                                <h3><%= student.name %></h3>
                                <p class="student-email"><%= student.email %></p>
                                <p class="student-date">Joined <%= new Date(student.createdAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></p>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>

        <div class="dashboard-footer">
            <form action="/auth/logout" method="GET">
                <button type="submit" class="btn-primary">Logout</button>
            </form>
        </div>
    </div>
</body>
</html>