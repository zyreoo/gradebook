<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard - Online Gradebook</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1>Teacher Dashboard</h1>
            <div class="user-info">
                <p><strong>Welcome, <%= user.name %>!</strong></p>
                <p>Email: <%= user.email %></p>
                <p>Role: <%= user.role %></p>
            </div>
        </div>

        <div class="section">
            <h2>My Classes (<%= assignedClasses.length %>)</h2>
            <% if (assignedClasses.length === 0) { %>
                <div class="empty-state">
                    <p>No classes assigned yet. Contact your school administrator to assign you to classes.</p>
                </div>
            <% } else { %>
                <div class="action-grid">
                    <% assignedClasses.forEach(function(classYear) { %>
                        <a href="/class/<%= classYear %>" class="action-card">
                            <div class="action-icon"><%= classYear.charAt(0).toUpperCase() %></div>
                            <h3>Class <%= classYear %></h3>
                            <p>View students and manage grades</p>
                        </a>
                    <% }); %>
                </div>
            <% } %>
        </div>

        <% if (classmasterClasses && classmasterClasses.length > 0) { %>
            <div class="section" style="border: 2px solid var(--accent); padding: 20px; border-radius: 8px; margin-top: 20px;">
                <h2>My Classmaster Classes (<%= classmasterClasses.length %>)</h2>
                <p class="helper" style="margin-bottom: 16px;">As classmaster, you can view all student grades and motivate absences.</p>
                <div class="action-grid">
                    <% classmasterClasses.forEach(function(className) { %>
                        <a href="/class/<%= className %>" class="action-card" style="border: 2px solid var(--accent);">
                            <div class="action-icon" style="background: var(--accent); color: white;">CM</div>
                            <h3>Class <%= className %></h3>
                            <p>Classmaster View - All grades & absences</p>
                        </a>
                    <% }); %>
                </div>
            </div>
        <% } %>

        <div class="dashboard-footer">
            <form action="/auth/logout" method="GET">
                <button type="submit" class="btn-primary">Logout</button>
            </form>
        </div>
    </div>
</body>
</html>