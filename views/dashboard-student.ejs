<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard - Online Gradebook</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1>Welcome, <%= user.name %>!</h1>
            <div class="user-info">
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Role:</strong> <%= user.role %></p>
            </div>
        </div>

        <div class="dashboard-content">
            <!-- Statistics Section -->
            <div class="section">
                <h2>Statistics</h2>
                <div class="summary-stats">
                    <div class="stat-card">
                        <div class="stat-value"><%= stats.overallAverage || '0.00' %></div>
                        <div class="stat-label">Overall Average</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value"><%= stats.totalSubjects %></div>
                        <div class="stat-label">Total Subjects</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value"><%= stats.totalGrades %></div>
                        <div class="stat-label">Total Grades</div>
                    </div>
                    <% if (stats.totalAbsences !== undefined && stats.totalAbsences > 0) { %>
                        <div class="stat-card">
                            <div class="stat-value" style="color: #dc3545;"><%= stats.unmotivatedAbsences %></div>
                            <div class="stat-label">Unmotivated Absences</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value" style="color: #28a745;"><%= stats.motivatedAbsences %></div>
                            <div class="stat-label">Motivated Absences</div>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Feedback Section -->
            <% if (typeof feedback !== 'undefined' && feedback) { %>
            <div class="section">
                <h2>Your Academic Feedback</h2>
                <div class="feedback-container feedback-<%= feedback.tone %>">
                    <div class="feedback-overall">
                        <h3><%= feedback.overall %></h3>
                    </div>

                    <% if (feedback.recommendations && feedback.recommendations.length > 0) { %>
                        <div class="feedback-recommendations">
                            <h4>Recommendations:</h4>
                            <ul>
                                <% feedback.recommendations.forEach(function(rec) { %>
                                    <li><%= rec %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>

                    <% if (feedback.subjects && feedback.subjects.length > 0) { %>
                        <div class="feedback-subjects">
                            <h4>Subject-Specific Feedback:</h4>
                            <div class="feedback-subjects-grid">
                                <% feedback.subjects.forEach(function(subjFeedback) { %>
                                    <div class="feedback-subject-item status-<%= subjFeedback.status %>">
                                        <strong><%= subjFeedback.name %>:</strong>
                                        <span><%= subjFeedback.message %></span>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
            <% } %>

            <!-- Subjects & Grades Section -->
            <div class="section">
                <h2>My Grades by Subject</h2>
                
                <% if (subjects.length === 0) { %>
                    <div class="empty-state">
                        <p>No grades recorded yet. Check back later!</p>
                    </div>
                <% } else { %>
                    <!-- Search Box -->
                    <div class="field" style="margin-bottom: 20px; max-width: 400px;">
                        <label for="subject-search">Search Subjects</label>
                        <input 
                            type="text" 
                            id="subject-search" 
                            placeholder="Type to search subjects..." 
                            style="margin: 0;"
                        >
                    </div>
                    
                    <div class="grades-grid" id="subjects-grid">
                        <% subjects.forEach(function(subject) { 
                            let badgeClass = 'grade-1';
                            if (subject.hasGrades) {
                                if (subject.average >= 9.5) badgeClass = 'grade-10';
                                else if (subject.average >= 8.5) badgeClass = 'grade-9';
                                else if (subject.average >= 7.5) badgeClass = 'grade-8';
                                else if (subject.average >= 6.5) badgeClass = 'grade-7';
                                else if (subject.average >= 5.5) badgeClass = 'grade-6';
                            }
                        %>
                            <div class="subject-card" data-subject-name="<%= subject.name.toLowerCase() %>">
                                <div class="subject-header">
                                    <h3><%= subject.name %></h3>
                                    <% if (subject.hasGrades) { %>
                                        <span class="grade-badge <%= badgeClass %>">
                                            <%= subject.average.toFixed(2) %>
                                        </span>
                                    <% } else { %>
                                        <span class="badge" style="background: var(--border); color: var(--text-dim);">
                                            No grades
                                        </span>
                                    <% } %>
                                </div>
                                <div class="subject-details">
                                    <% if (subject.hasGrades) { %>
                                        <div class="grades-list">
                                            <% subject.grades.forEach(function(grade) { %>
                                                <span class="grade-item"><%= grade.value %></span>
                                            <% }); %>
                                        </div>
                                        <% if (subject.teacherName) { %>
                                            <p class="grade-comment">
                                                Teacher: <%= subject.teacherName %>
                                            </p>
                                        <% } %>
                                    <% } else { %>
                                        <div class="muted-box" style="margin: 10px 0; padding: 12px;">
                                            No grades recorded yet
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                    
                    <!-- No results message -->
                    <div id="no-results" class="empty-state" style="display: none;">
                        <p>No subjects found matching your search.</p>
                    </div>
                <% } %>
            </div>

            <!-- Absences Section -->
            <div class="section">
                <h2>My Absences</h2>
                
                <% 
                    const hasAbsences = absencesBySubject && Object.keys(absencesBySubject).length > 0;
                %>
                
                <% if (!hasAbsences) { %>
                    <div class="empty-state">
                        <p>No absences recorded.</p>
                    </div>
                <% } else { %>
                    <div class="grades-grid">
                        <% Object.keys(absencesBySubject).forEach(function(subject) { 
                            const subjectAbsences = absencesBySubject[subject];
                            const totalMotivated = subjectAbsences.motivated.length;
                            const totalUnmotivated = subjectAbsences.unmotivated.length;
                        %>
                            <div class="subject-card">
                                <div class="subject-header">
                                    <h3><%= subject %></h3>
                                    <div style="display: flex; gap: 8px; flex-wrap: wrap;">
                                        <% if (totalUnmotivated > 0) { %>
                                            <span class="badge" style="background: #dc3545; color: white;">
                                                <%= totalUnmotivated %> Unmotivated
                                            </span>
                                        <% } %>
                                        <% if (totalMotivated > 0) { %>
                                            <span class="badge" style="background: #28a745; color: white;">
                                                <%= totalMotivated %> Motivated
                                            </span>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="subject-details">
                                    <% if (subjectAbsences.unmotivated.length > 0) { %>
                                        <div style="margin-bottom: 12px;">
                                            <strong style="color: #dc3545;">Unmotivated Absences:</strong>
                                            <ul style="margin: 8px 0; padding-left: 20px;">
                                                <% subjectAbsences.unmotivated.forEach(function(absence) { %>
                                                    <li style="margin-bottom: 4px;">
                                                        <% 
                                                            let dateStr = '';
                                                            if (absence.date && absence.date.toDate) {
                                                                dateStr = absence.date.toDate().toLocaleDateString();
                                                            } else if (absence.date) {
                                                                dateStr = new Date(absence.date).toLocaleDateString();
                                                            } else {
                                                                dateStr = 'N/A';
                                                            }
                                                        %>
                                                        <%= dateStr %> 
                                                        <% if (absence.teacherName) { %>(<%= absence.teacherName %>)<% } %>
                                                    </li>
                                                <% }); %>
                                            </ul>
                                        </div>
                                    <% } %>
                                    
                                    <% if (subjectAbsences.motivated.length > 0) { %>
                                        <div>
                                            <strong style="color: #28a745;">Motivated Absences:</strong>
                                            <ul style="margin: 8px 0; padding-left: 20px;">
                                                <% subjectAbsences.motivated.forEach(function(absence) { %>
                                                    <li style="margin-bottom: 4px;">
                                                        <% 
                                                            let dateStr = '';
                                                            if (absence.date && absence.date.toDate) {
                                                                dateStr = absence.date.toDate().toLocaleDateString();
                                                            } else if (absence.date) {
                                                                dateStr = new Date(absence.date).toLocaleDateString();
                                                            } else {
                                                                dateStr = 'N/A';
                                                            }
                                                        %>
                                                        <%= dateStr %>
                                                        <% if (absence.reason) { %> - <%= absence.reason %><% } %>
                                                        <% if (absence.teacherName) { %>(<%= absence.teacherName %>)<% } %>
                                                    </li>
                                                <% }); %>
                                            </ul>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </div>
        </div>

        <div class="dashboard-footer">
            <form action="/auth/logout" method="GET">
                <button type="submit" class="btn-primary">Logout</button>
            </form>
        </div>
    </div>
    <script>
        // Subject search functionality
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('subject-search');
            const subjectsGrid = document.getElementById('subjects-grid');
            const noResults = document.getElementById('no-results');
            
            if (searchInput && subjectsGrid) {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase().trim();
                    const subjectCards = subjectsGrid.querySelectorAll('.subject-card');
                    let visibleCount = 0;
                    
                    subjectCards.forEach(function(card) {
                        const subjectName = card.getAttribute('data-subject-name');
                        if (subjectName.includes(searchTerm)) {
                            card.style.display = '';
                            visibleCount++;
                        } else {
                            card.style.display = 'none';
                        }
                    });
                    
                    // Show/hide no results message
                    if (visibleCount === 0 && searchTerm !== '') {
                        noResults.style.display = 'block';
                        subjectsGrid.style.display = 'none';
                    } else {
                        noResults.style.display = 'none';
                        subjectsGrid.style.display = 'grid';
                    }
                });
            }
        });
    </script>
</body>
</html>
