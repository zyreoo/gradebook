<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= student.name %> - Student Details</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1><%= student.name %></h1>
            <div class="user-info">
                <p><strong>Email:</strong> <%= student.email %></p>
                <p><strong>Class:</strong> <%= classYear %></p>
                <p><strong style="color: var(--accent);">Classmaster View</strong></p>
            </div>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>
        
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="success-message">
                <%= success %>
            </div>
        <% } %>

        <div class="navigation">
            <a href="/class/<%= classYear %>">‚Üê Back to Class</a>
        </div>

        <!-- Statistics Section -->
        <div class="section">
            <h2>Statistics</h2>
            <div class="summary-stats">
                <div class="stat-card">
                    <div class="stat-value"><%= stats.overallAverage || '0.00' %></div>
                    <div class="stat-label">Overall Average</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value"><%= stats.totalSubjects %></div>
                    <div class="stat-label">Total Subjects</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value"><%= stats.totalGrades %></div>
                    <div class="stat-label">Total Grades</div>
                </div>
                <% if (stats.totalAbsences > 0) { %>
                    <div class="stat-card">
                        <div class="stat-value" style="color: #dc3545;"><%= stats.unmotivatedAbsences %></div>
                        <div class="stat-label">Unmotivated Absences</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value" style="color: #28a745;"><%= stats.motivatedAbsences %></div>
                        <div class="stat-label">Motivated Absences</div>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Feedback Section -->
        <% if (typeof feedback !== 'undefined' && feedback) { %>
        <div class="section">
            <h2>Academic Feedback</h2>
            <div class="feedback-container feedback-<%= feedback.tone %>">
                <div class="feedback-overall">
                    <h3><%= feedback.overall %></h3>
                </div>

                <% if (feedback.recommendations && feedback.recommendations.length > 0) { %>
                    <div class="feedback-recommendations">
                        <h4>Recommendations:</h4>
                        <ul>
                            <% feedback.recommendations.forEach(function(rec) { %>
                                <li><%= rec %></li>
                            <% }); %>
                        </ul>
                    </div>
                <% } %>

                <% if (feedback.subjects && feedback.subjects.length > 0) { %>
                    <div class="feedback-subjects">
                        <h4>Subject-Specific Feedback:</h4>
                        <div class="feedback-subjects-grid">
                            <% feedback.subjects.forEach(function(subjFeedback) { %>
                                <div class="feedback-subject-item status-<%= subjFeedback.status %>">
                                    <strong><%= subjFeedback.name %>:</strong>
                                    <span><%= subjFeedback.message %></span>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
        <% } %>

        <!-- Subjects & Grades Section -->
        <div class="section">
            <h2>Grades by Subject</h2>
            <% if (subjects.length === 0) { %>
                <div class="empty-state">
                    <p>No subjects recorded yet.</p>
                </div>
            <% } else { %>
                <div class="grades-grid">
                    <% subjects.forEach(function(subject) { 
                        let badgeClass = 'grade-1';
                        if (subject.hasGrades) {
                            if (subject.average >= 9.5) badgeClass = 'grade-10';
                            else if (subject.average >= 8.5) badgeClass = 'grade-9';
                            else if (subject.average >= 7.5) badgeClass = 'grade-8';
                            else if (subject.average >= 6.5) badgeClass = 'grade-7';
                            else if (subject.average >= 5.5) badgeClass = 'grade-6';
                        }
                    %>
                        <div class="subject-card">
                            <div class="subject-header">
                                <h3><%= subject.name %></h3>
                                <% if (subject.hasGrades) { %>
                                    <span class="grade-badge <%= badgeClass %>">
                                        <%= subject.average.toFixed(2) %>
                                    </span>
                                <% } else { %>
                                    <span class="badge" style="background: var(--border); color: var(--text-dim);">
                                        No grades
                                    </span>
                                <% } %>
                            </div>
                            <div class="subject-details">
                                <% if (subject.hasGrades) { %>
                                    <div class="grades-list">
                                        <% subject.grades.forEach(function(grade) { %>
                                            <div class="grade-item-container" style="display: flex; align-items: center; gap: 8px; margin-bottom: 4px; flex-wrap: wrap;">
                                                <span class="grade-item"><%= grade.value %></span>
                                                <span style="color: var(--text-dim); font-size: 12px;">
                                                    <% 
                                                        let dateStr = '';
                                                        if (grade.date && grade.date.toDate) {
                                                            dateStr = grade.date.toDate().toLocaleDateString();
                                                        } else if (grade.date) {
                                                            dateStr = new Date(grade.date).toLocaleDateString();
                                                        }
                                                    %>
                                                    <%= dateStr %>
                                                </span>
                                                
                                                <!-- Edit/Delete buttons (only show if grade has an ID and teacher teaches this subject) -->
                                                <% 
                                                    const classmasterSubjects = typeof teacherSubjects !== 'undefined' ? teacherSubjects : [];
                                                    const canEditDelete = grade.id && classmasterSubjects.includes(subject.name);
                                                %>
                                                <% if (canEditDelete) { %>
                                                    <button 
                                                        class="btn-add-grade" 
                                                        onclick="openEditGradeModal('<%= grade.id %>', '<%= grade.value %>', '<%= subject.name %>', '<%= student.uid %>', '<%= classYear %>')"
                                                        style="padding: 2px 6px; font-size: 10px;">
                                                        Edit
                                                    </button>
                                                    <form action="/delete-grade" method="POST" style="display: inline; margin: 0;" onsubmit="return confirm('Are you sure you want to delete this grade?');">
                                                        <input type="hidden" name="gradeId" value="<%= grade.id %>">
                                                        <input type="hidden" name="studentId" value="<%= student.uid %>">
                                                        <input type="hidden" name="classYear" value="<%= classYear %>">
                                                        <button type="submit" class="btn-remove" style="padding: 2px 6px; font-size: 10px;">
                                                            Delete
                                                        </button>
                                                    </form>
                                                <% } %>
                                            </div>
                                        <% }); %>
                                    </div>
                                    <% if (subject.teacherName) { %>
                                        <p class="grade-comment">
                                            Teacher: <%= subject.teacherName %>
                                        </p>
                                    <% } %>
                                <% } else { %>
                                    <div class="muted-box" style="margin: 10px 0; padding: 12px;">
                                        No grades recorded yet
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>

        <!-- Absences Section -->
        <div class="section">
            <h2>Absences</h2>
            <% 
                const hasAbsences = absencesBySubject && Object.keys(absencesBySubject).length > 0;
            %>
            <% if (!hasAbsences) { %>
                <div class="empty-state">
                    <p>No absences recorded.</p>
                </div>
            <% } else { %>
                <div class="grades-grid">
                    <% Object.keys(absencesBySubject).forEach(function(subject) { 
                        const subjectAbsences = absencesBySubject[subject];
                        const totalMotivated = subjectAbsences.motivated.length;
                        const totalUnmotivated = subjectAbsences.unmotivated.length;
                    %>
                        <div class="subject-card">
                            <div class="subject-header">
                                <h3><%= subject %></h3>
                                <div style="display: flex; gap: 8px; flex-wrap: wrap;">
                                    <% if (totalUnmotivated > 0) { %>
                                        <span class="badge" style="background: #dc3545; color: white;">
                                            <%= totalUnmotivated %> Unmotivated
                                        </span>
                                    <% } %>
                                    <% if (totalMotivated > 0) { %>
                                        <span class="badge" style="background: #28a745; color: white;">
                                            <%= totalMotivated %> Motivated
                                        </span>
                                    <% } %>
                                </div>
                            </div>
                            <div class="subject-details">
                                <% if (subjectAbsences.unmotivated.length > 0) { %>
                                    <div style="margin-bottom: 12px;">
                                        <strong style="color: #dc3545;">Unmotivated Absences:</strong>
                                        <ul style="margin: 8px 0; padding-left: 20px;">
                                            <% subjectAbsences.unmotivated.forEach(function(absence) { %>
                                                <li style="margin-bottom: 4px; display: flex; align-items: center; gap: 8px; flex-wrap: wrap;">
                                                    <% 
                                                        let dateStr = '';
                                                        if (absence.date && absence.date.toDate) {
                                                            dateStr = absence.date.toDate().toLocaleDateString();
                                                        } else if (absence.date) {
                                                            dateStr = new Date(absence.date).toLocaleDateString();
                                                        } else {
                                                            dateStr = 'N/A';
                                                        }
                                                    %>
                                                    <span><%= dateStr %></span>
                                                    <% if (absence.teacherName) { %><span style="color: var(--text-dim);">(<%= absence.teacherName %>)</span><% } %>
                                                    <% if (absence.id) { %>
                                                        <form action="/motivate-absence" method="POST" style="display: inline; margin: 0;">
                                                            <input type="hidden" name="absenceId" value="<%= absence.id %>">
                                                            <input type="hidden" name="classYear" value="<%= classYear %>">
                                                            <button type="submit" class="btn-add-grade" style="padding: 2px 6px; font-size: 10px;">Motivate</button>
                                                        </form>
                                                    <% } %>
                                                </li>
                                            <% }); %>
                                        </ul>
                                    </div>
                                <% } %>
                                
                                <% if (subjectAbsences.motivated.length > 0) { %>
                                    <div>
                                        <strong style="color: #28a745;">Motivated Absences:</strong>
                                        <ul style="margin: 8px 0; padding-left: 20px;">
                                            <% subjectAbsences.motivated.forEach(function(absence) { %>
                                                <li style="margin-bottom: 4px;">
                                                    <% 
                                                        let dateStr = '';
                                                        if (absence.date && absence.date.toDate) {
                                                            dateStr = absence.date.toDate().toLocaleDateString();
                                                        } else if (absence.date) {
                                                            dateStr = new Date(absence.date).toLocaleDateString();
                                                        } else {
                                                            dateStr = 'N/A';
                                                        }
                                                    %>
                                                    <%= dateStr %>
                                                    <% if (absence.reason) { %> - <%= absence.reason %><% } %>
                                                    <% if (absence.teacherName) { %>(<%= absence.teacherName %>)<% } %>
                                                </li>
                                            <% }); %>
                                        </ul>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>

        <div class="dashboard-footer">
            <form action="/auth/logout" method="GET">
                <button type="submit" class="btn-primary">Logout</button>
            </form>
        </div>
    </div>

    <!-- Edit Grade Modal -->
    <div id="editGradeModal" class="modal">
        <div class="modal-content">
            <h3>Edit Grade</h3>
            <form action="/edit-grade" method="POST" id="editGradeForm">
                <input type="hidden" name="gradeId" id="editGradeId">
                <input type="hidden" name="studentId" id="editStudentId">
                <input type="hidden" name="classYear" id="editClassYear">
                
                <div class="form-group">
                    <label>Subject:</label>
                    <input type="text" name="subject" id="editSubject" readonly style="color: var(--text-dim); cursor: not-allowed;">
                </div>
                
                <div class="form-group">
                    <label>Grade:</label>
                    <select name="grade" id="editGrade" required>
                        <option value="">Select Grade</option>
                        <option value="10">10 - Excellent</option>
                        <option value="9">9 - Very Good</option>
                        <option value="8">8 - Good</option>
                        <option value="7">7 - Satisfactory</option>
                        <option value="6">6 - Sufficient</option>
                        <option value="5">5 - Insufficient</option>
                        <option value="4">4 - Insufficient</option>
                        <option value="3">3 - Insufficient</option>
                        <option value="2">2 - Insufficient</option>
                        <option value="1">1 - Insufficient</option>
                    </select>
                </div>
                
                <div class="modal-actions">
                    <button type="button" onclick="closeEditGradeModal()" class="ghost-btn">
                        Cancel
                    </button>
                    <button type="submit" class="btn-primary">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
    function openEditGradeModal(gradeId, currentGrade, subject, studentId, classYear) {
        document.getElementById('editGradeId').value = gradeId;
        document.getElementById('editStudentId').value = studentId;
        document.getElementById('editClassYear').value = classYear;
        document.getElementById('editSubject').value = subject;
        document.getElementById('editGrade').value = currentGrade;
        document.getElementById('editGradeModal').classList.add('active');
    }

    function closeEditGradeModal() {
        document.getElementById('editGradeModal').classList.remove('active');
    }

    // Close modal when clicking outside
    document.getElementById('editGradeModal')?.addEventListener('click', function(e) {
        if (e.target === this) {
            closeEditGradeModal();
        }
    });
    </script>
</body>
</html>

