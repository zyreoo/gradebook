<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Class <%= classYear %> - Online Gradebook</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .absence-unmotivated { background-color: #ffe0e0; }
        .absence-motivated { background-color: #e0ffe0; }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">  
            <h1>Class <%= classYear %></h1>
            <div class="user-info">
                <p><strong>Name:</strong> <%= user.name %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                <% if (isClassmaster) { %>
                    <p><strong style="color: var(--accent);">Classmaster</strong></p>
                <% } else if (teacher && teacher.subject) { %>
                    <p><strong>Subject:</strong> <%= teacher.subject %></p>
                <% } %>
            </div>
        </div>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>
            
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="success-message">
                    <%= success %>
                </div>
            <% } %>
            
            <div class="navigation">
                <a href="/dashboard">← Back to Dashboard</a>
            </div>

        <div class="section">
            <% if (students.length === 0) { %>
                <div class="empty-state">
                    <p>No students found in this class yet.</p>
                </div>
            <% } else { %>
                <div class="students-list">
                    <h2>Students (<%= students.length %>)</h2>
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Class Year</th>
                                <% if (isClassmaster) { %>
                                    <th>All Grades</th>
                                    <th>Absences</th>
                                <% } %>
                                <th>Add a grade</th>
                                <th>Record absence</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% students.forEach(function(student) { %>
                                <% 
                                    const teacherSubjects = teacher.subjects || (teacher.subject ? [teacher.subject] : []);
                                %>
                                <tr>
                                    <td><%= student.name %></td>
                                    <td><%= student.email %></td>
                                    <td><%= student.classYear || 'N/A' %></td>
                                    <% if (isClassmaster) { %>
                                        <td>
                                            <% if (student.allGrades && student.allGrades.length > 0) { %>
                                                <div class="grades-list" style="max-width: 200px;">
                                                    <% student.allGrades.slice(0, 5).forEach(function(grade) { %>
                                                        <span class="grade-item">
                                                            <%= grade.subject %>: <%= grade.grade %>
                                                        </span>
                                                    <% }); %>
                                                    <% if (student.allGrades.length > 5) { %>
                                                        <span class="helper" style="font-size: 11px;">+<%= student.allGrades.length - 5 %> more</span>
                                                    <% } %>
                                                </div>
                                            <% } else { %>
                                                <span class="helper">No grades</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (student.allAbsences && student.allAbsences.length > 0) { %>
                                                <div class="absences-list" style="max-width: 250px;">
                                                    <% student.allAbsences.slice(0, 3).forEach(function(absence) { %>
                                                        <div class="absence-item <%= absence.type === 'unmotivated' ? 'unmotivated' : 'motivated' %>">
                                                            <% 
                                                                let dateStr = '';
                                                                if (absence.date && absence.date.toDate) {
                                                                    dateStr = absence.date.toDate().toLocaleDateString();
                                                                } else if (absence.date) {
                                                                    dateStr = new Date(absence.date).toLocaleDateString();
                                                                }
                                                            %>
                                                            <span class="absence-date"><%= absence.subject %> - <%= dateStr %></span>
                                                            <% if (absence.type === 'unmotivated') { %>
                                                                <form action="/motivate-absence" method="POST" style="display: inline; margin-left: 8px;">
                                                                    <input type="hidden" name="absenceId" value="<%= absence.id %>">
                                                                    <input type="hidden" name="classYear" value="<%= classYear %>">
                                                                    <button type="submit" class="btn-add-grade" style="padding: 2px 6px; font-size: 10px;">Motivate</button>
                                                                </form>
                                                            <% } else { %>
                                                                <span class="absence-status" style="background: var(--success); color: white; padding: 2px 6px; border-radius: 3px; font-size: 10px;">✓ Motivated</span>
                                                            <% } %>
                                                        </div>
                                                    <% }); %>
                                                    <% if (student.allAbsences.length > 3) { %>
                                                        <span class="helper" style="font-size: 11px;">+<%= student.allAbsences.length - 3 %> more</span>
                                                    <% } %>
                                                </div>
                                            <% } else { %>
                                                <span class="helper">No absences</span>
                                            <% } %>
                                        </td>
                                    <% } %>
                                    <td>
                                        <form action="/add-grade" method="POST" class="grade-form">
                                            <input type="hidden" name="studentId" value="<%= student.uid %>">
                                            <input type="hidden" name="classYear" value="<%= classYear %>">
                                            
                                            <% if (teacherSubjects.length > 0) { %>
                                                <select name="subject" class="grade-select" required style="min-width: 140px;">
                                                    <option value="">Select Subject</option>
                                                    <% teacherSubjects.forEach(function(subj) { %>
                                                        <option value="<%= subj %>"><%= subj %></option>
                                                    <% }); %>
                                                </select>
                                            <% } %>

                                            <select id="grade" name="grade" class="grade-select" required>
                                                <option value="">Select Grade</option>
                                                <option value="10">10 - Excellent</option>
                                                <option value="9">9 - Very Good</option>
                                                <option value="8">8 - Good</option>
                                                <option value="7">7 - Satisfactory</option>
                                                <option value="6">6 - Sufficient</option>
                                                <option value="5">5 - Insufficient</option>
                                                <option value="4">4 - Insufficient</option>
                                                <option value="3">3 - Insufficient</option>
                                                <option value="2">2 - Insufficient</option>
                                                <option value="1">1 - Insufficient</option>
                                            </select>
                                            <button type="submit" class="btn-add-grade">Add</button>
                                        </form>
                                    </td>
                                    <td>
                                        <form action="/add-absence" method="POST" class="absence-form">
                                            <input type="hidden" name="studentId" value="<%= student.uid %>">
                                            <input type="hidden" name="classYear" value="<%= classYear %>">
                                            
                                            <% if (teacherSubjects.length > 0) { %>
                                                <select name="subject" class="absence-select" required>
                                                    <option value="">Select Subject</option>
                                                    <% teacherSubjects.forEach(function(subj) { %>
                                                        <option value="<%= subj %>"><%= subj %></option>
                                                    <% }); %>
                                                </select>
                                            <% } %>

                                            <select name="type" class="absence-select" required>
                                                <option value="">Select Type</option>
                                                <option value="motivated">Motivated</option>
                                                <option value="unmotivated">Unmotivated</option>
                                            </select>

                                            <input type="date" name="date" class="absence-date" required value="<%= new Date().toISOString().split('T')[0] %>">
                                            
                                            <input type="text" name="reason" class="absence-reason" placeholder="Reason (optional)">
                                            
                                            <button type="submit" class="btn-add-grade">Add</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>

        <div class="dashboard-footer">
                <form action="/auth/logout" method="GET">
                    <button type="submit" class="btn-primary">Logout</button>
                </form>
        </div>
    </div>
    <script>
        // Show/hide reason field based on absence type
        document.addEventListener('DOMContentLoaded', function() {
            const absenceForms = document.querySelectorAll('.absence-form');
            absenceForms.forEach(form => {
                const typeSelect = form.querySelector('select[name="type"]');
                const reasonInput = form.querySelector('input[name="reason"]');
                
                if (typeSelect && reasonInput) {
                    typeSelect.addEventListener('change', function() {
                        if (this.value === 'motivated') {
                            reasonInput.classList.add('show');
                            reasonInput.required = false; // Optional but visible
                        } else {
                            reasonInput.classList.remove('show');
                            reasonInput.value = ''; // Clear when hidden
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>
