<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Înregistrare Administrator - Catalog Online</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <div class="login-card">
            <div class="admin-header-section">
                <div class="admin-badge">Înregistrare Școală Nouă</div>
                <h1>Înregistrează Școala Ta</h1>
                <p class="admin-subtitle">Creează un cont de administrator pentru a gestiona școala ta</p>
            </div>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>

            <% if (typeof success !== 'undefined' && success) { %>
                <div class="success-message">
                    <%= success %>
                </div>
            <% } %>

            <form action="/auth/admin/register" method="POST">
                <div class="form-section">
                    <div class="section-title">Informații Școală</div>
                    
                    <div class="form-group">
                        <label for="schoolName">Nume Școală</label>
                        <input 
                            type="text" 
                            id="schoolName" 
                            name="schoolName" 
                            required 
                            placeholder="Liceul Național"
                        >
                    </div>

                    <div class="form-group">
                        <label for="adress">Adresă Școală</label>
                        <input 
                            type="text" 
                            id="adress" 
                            name="adress" 
                            placeholder="Str. Principală nr. 123, Oraș (Opțional)"
                        >
                    </div>
                </div>

                <!-- Administrator Information -->
                <div class="form-section">
                    <div class="section-title">Cont Administrator</div>
                    
                    <div class="form-group">
                        <label for="name">Nume Administrator</label>
                        <input 
                            type="text" 
                            id="name" 
                            name="name" 
                            required 
                            autocomplete="name"
                            placeholder="Ion Popescu"
                        >
                    </div>

                    <div class="form-group">
                        <label for="email">Email Administrator</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            required 
                            autocomplete="email"
                            placeholder="admin@scoalatale.ro"
                        >
                    </div>

                    <div class="form-group">
                        <label for="password">Parolă</label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            required 
                            autocomplete="new-password"
                            minlength="6"
                            placeholder="Minim 6 caractere"
                        >
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword">Confirmă Parola</label>
                        <input 
                            type="password" 
                            id="confirmPassword" 
                            name="confirmPassword" 
                            required 
                            autocomplete="new-password"
                            minlength="6"
                            placeholder="Reintroduceți parola"
                        >
                    </div>
                </div>

                <button type="submit" class="btn-primary">Creează Cont Școală</button>
            </form>

            <div class="links-row">
                <a href="/auth/admin/login">Ai deja cont? Autentifică-te</a>
                <a href="/auth/login" class="back-link">Înapoi la Autentificare Normală</a>
            </div>  
        </div>
    </div>
</body>
</html>

