<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Admin Registration - Online Gradebook</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .admin-header-section {
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid var(--border);
        }

        .admin-badge {
            display: inline-block;
            background: var(--card);
            color: var(--text);
            border: 1px solid var(--border);
            padding: 6px 14px;
            border-radius: 4px;
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.8px;
            margin-bottom: 16px;
        }

        .login-card h1 {
            color: var(--text);
            font-size: 28px;
            font-weight: 600;
            margin: 0;
        }

        .admin-subtitle {
            color: var(--text-dim);
            font-size: 14px;
            margin-top: 8px;
        }

        .form-section {
            margin-bottom: 24px;
        }

        .section-title {
            font-size: 15px;
            font-weight: 600;
            color: var(--text);
            margin-bottom: 16px;
            padding-bottom: 8px;
            border-bottom: 1px solid var(--border);
        }

        .btn-primary {
            width: 100%;
            background: var(--accent);
            color: var(--bg);
            border: none;
            font-weight: 600;
        }

        .btn-primary:hover {
            background: var(--text);
        }

        .links-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 24px;
            padding-top: 20px;
            border-top: 1px solid var(--border);
            font-size: 14px;
        }

        .links-row a {
            color: var(--accent);
            text-decoration: none;
            font-weight: 500;
            transition: all 0.2s ease;
            padding: 6px 12px;
            border-radius: 4px;
        }

        .links-row a:hover {
            background: var(--card);
            color: var(--text);
        }

        .back-link {
            color: var(--text-dim) !important;
            font-size: 13px;
        }

        .back-link:hover {
            color: var(--text) !important;
            background: transparent !important;
            text-decoration: underline;
        }

        @media (max-width: 480px) {
            .login-card h1 {
                font-size: 24px;
            }

            .links-row {
                flex-direction: column;
                gap: 12px;
                align-items: flex-start;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-card">
            <div class="admin-header-section">
                <div class="admin-badge">New School Registration</div>
                <h1>Register Your School</h1>
                <p class="admin-subtitle">Create an admin account to manage your school</p>
            </div>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>

            <% if (typeof success !== 'undefined' && success) { %>
                <div class="success-message">
                    <%= success %>
                </div>
            <% } %>

            <form action="/auth/admin/register" method="POST">
                <div class="form-section">
                    <div class="section-title">School Information</div>
                    
                    <div class="form-group">
                        <label for="schoolName">School Name</label>
                        <input 
                            type="text" 
                            id="schoolName" 
                            name="schoolName" 
                            required 
                            placeholder="Lincoln High School"
                        >
                    </div>

                    <div class="form-group">
                        <label for="adress">School Address</label>
                        <input 
                            type="text" 
                            id="adress" 
                            name="adress" 
                            placeholder="123 Main Street, City, State (Optional)"
                        >
                    </div>
                </div>

                <!-- Administrator Information -->
                <div class="form-section">
                    <div class="section-title">Administrator Account</div>
                    
                    <div class="form-group">
                        <label for="name">Administrator Name</label>
                        <input 
                            type="text" 
                            id="name" 
                            name="name" 
                            required 
                            autocomplete="name"
                            placeholder="John Doe"
                        >
                    </div>

                    <div class="form-group">
                        <label for="email">Administrator Email</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            required 
                            autocomplete="email"
                            placeholder="admin@yourschool.edu"
                        >
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            required 
                            autocomplete="new-password"
                            minlength="6"
                            placeholder="Minimum 6 characters"
                        >
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input 
                            type="password" 
                            id="confirmPassword" 
                            name="confirmPassword" 
                            required 
                            autocomplete="new-password"
                            minlength="6"
                            placeholder="Re-enter your password"
                        >
                    </div>
                </div>

                <button type="submit" class="btn-primary">Create School Account</button>
            </form>

            <div class="links-row">
                <a href="/auth/admin/login">Already have an account? Log in</a>
                <a href="/auth/login" class="back-link">Back to Regular Login</a>
            </div>  
        </div>
    </div>
</body>
</html>

