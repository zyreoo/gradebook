<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Online Gradebook</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            display: block;
            padding: 0;
            align-items: flex-start;
            min-height: 100vh;
            background: #0f0f0f;
        }

        :root {
            --bg-main: #0f0f0f;
            --bg-secondary: #1a1a1a;
            --card: #1e1e1e;
            --border: #2d2d2d;
            --text: #e5e5e5;
            --text-dim: #a0a0a0;
            --accent: #7c87f8;
            --accent-hover: #6b76e8;
            --success: #4ade80;
            --error: #f87171;
            --shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
            --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.4);
        }

        * {
            box-sizing: border-box;
        }

        html {
            scroll-behavior: smooth;
        }

        .admin-container {
            max-width: 1100px;
            width: 100%;
            margin: 0 auto;
            padding: 50px 30px;
            animation: fadeInPage 0.5s ease;
        }

        @keyframes fadeInPage {
            from { 
                opacity: 0; 
                transform: translateY(20px); 
            }
            to { 
                opacity: 1; 
                transform: translateY(0); 
            }
        }
        
        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 50px;
        }

        .admin-header-left h1 {
            font-size: 32px;
            font-weight: 600;
            margin: 0 0 8px 0;
            color: var(--text);
        }
        
        .welcome-text {
            color: var(--text-dim);
            font-size: 15px;
            margin: 0;
            font-weight: 400;
        }

        .welcome-text strong {
            color: var(--text);
            font-weight: 500;
        }
        
        .logout-btn {
            background: transparent;
            color: var(--text);
            padding: 10px 20px;
            text-decoration: none;
            font-size: 14px;
            border: 1px solid var(--border);
            border-radius: 8px;
            display: inline-block;
            transition: all 0.2s ease;
        }

        .logout-btn:hover {
            background: var(--card);
            border-color: var(--text-dim);
        }

        /* Stats */
        .stats-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 20px;
            margin-bottom: 50px;
        }

        .stat-card {
            background: var(--card);
            border: 1px solid var(--border);
            padding: 30px;
            border-radius: 12px;
            text-align: center;
            box-shadow: var(--shadow);
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            box-shadow: var(--shadow-lg);
            transform: translateY(-2px);
        }

        .stat-number {
            font-size: 36px;
            font-weight: 600;
            margin-bottom: 8px;
            color: var(--accent);
        }

        .stat-label {
            font-size: 14px;
            color: var(--text-dim);
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* Tabs */
        .tabs {
            display: flex;
            gap: 8px;
            margin-bottom: 30px;
            border-bottom: 1px solid var(--border);
            padding-bottom: 0;
        }

        .tab-button {
            background: transparent;
            border: none;
            padding: 12px 24px;
            font-size: 15px;
            font-weight: 500;
            color: var(--text-dim);
            cursor: pointer;
            border-bottom: 2px solid transparent;
            transition: all 0.2s ease;
            position: relative;
            bottom: -1px;
        }

        .tab-button:hover {
            color: var(--text);
        }

        .tab-button.active {
            color: var(--accent);
            border-bottom-color: var(--accent);
        }

        .tab-content {
            display: none;
            animation: fadeIn 0.3s ease;
        }

        .tab-content.active {
            display: block;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Cards */
        .card {
            background: var(--card);
            border: 1px solid var(--border);
            padding: 35px;
            border-radius: 12px;
            margin-bottom: 25px;
            box-shadow: var(--shadow);
        }

        .card h2 {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 25px;
            color: var(--text);
        }

        /* Messages */
        .message {
            padding: 14px 18px;
            margin-bottom: 25px;
            font-size: 14px;
            border-radius: 8px;
            border: 1px solid;
        }

        .error-message {
            color: var(--error);
            background: rgba(248, 113, 113, 0.1);
            border-color: rgba(248, 113, 113, 0.3);
        }

        .success-message {
            color: var(--success);
            background: rgba(74, 222, 128, 0.1);
            border-color: rgba(74, 222, 128, 0.3);
        }

        /* Forms */
        .form-group {
            margin-bottom: 22px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-size: 14px;
            color: var(--text);
            font-weight: 500;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 12px 16px;
            border: 1px solid var(--border);
            border-radius: 8px;
            background: var(--bg-secondary);
            color: var(--text);
            font-size: 14px;
            transition: all 0.2s ease;
        }

        .form-group input:focus,
        .form-group select:focus {
            outline: none;
            border-color: var(--accent);
            background: var(--card);
            box-shadow: 0 0 0 3px rgba(124, 135, 248, 0.15);
        }

        .form-group input::placeholder {
            color: var(--text-dim);
        }

        .btn-primary {
            background: var(--accent);
            color: white;
            padding: 12px 28px;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s ease;
            display: inline-block;
        }

        .btn-primary:hover {
            background: var(--accent-hover);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(124, 135, 248, 0.4);
        }

        /* Subject Pills */
        .subjects-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 25px;
            padding: 20px;
            background: var(--bg-secondary);
            border: 1px solid var(--border);
            border-radius: 8px;
            min-height: 70px;
        }

        .subject-pill {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 16px;
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: 20px;
            font-size: 14px;
            color: var(--text);
            font-weight: 500;
            transition: all 0.2s ease;
            box-shadow: var(--shadow);
        }

        .subject-pill:hover {
            transform: translateY(-1px);
            box-shadow: var(--shadow-lg);
        }

        .remove-subject {
            background: transparent;
            border: none;
            color: var(--text-dim);
            cursor: pointer;
            font-size: 16px;
            padding: 0;
            width: 18px;
            height: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: all 0.2s ease;
        }

        .remove-subject:hover {
            color: white;
            background: var(--error);
        }

        .add-subject-form {
            display: flex;
            gap: 12px;
            align-items: flex-end;
            padding-top: 20px;
            border-top: 1px solid var(--border);
        }

        .add-subject-form .form-group {
            flex: 1;
            margin-bottom: 0;
        }


        .users-grid {
            display: grid;
            gap: 12px;
        }

        .user-item {
            background: var(--bg-secondary);
            border: 1px solid var(--border);
            padding: 18px;
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.2s ease;
        }

        .user-item:hover {
            box-shadow: var(--shadow);
            border-color: var(--text-dim);
        }

        .user-info strong {
            color: var(--text);
            font-size: 15px;
            font-weight: 500;
            display: block;
            margin-bottom: 4px;
        }

        .user-email {
            color: var(--text-dim);
            font-size: 13px;
        }

        .no-users {
            text-align: center;
            padding: 60px 20px;
            color: var(--text-dim);
            font-size: 14px;
        }

        /* Filter */
        .filter-group {
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .filter-group label {
            font-size: 14px;
            color: var(--text);
            font-weight: 500;
        }

        .filter-group select {
            padding: 8px 12px;
            border: 1px solid var(--border);
            background: var(--card);
            color: var(--text);
            font-size: 14px;
            border-radius: 6px;
            transition: all 0.2s ease;
        }

        .filter-group select:focus {
            outline: none;
            border-color: var(--accent);
            box-shadow: 0 0 0 3px rgba(124, 135, 248, 0.15);
        }

        /* Class Year Sections */
        .class-year-section {
            padding: 20px;
            margin-bottom: 15px;
            border: 1px solid var(--border);
            border-radius: 8px;
            background: var(--bg-secondary);
        }

        .class-year-header h3 {
            font-size: 16px;
            font-weight: 600;
            margin: 0 0 15px 0;
            color: var(--text);
        }

        /* Modal */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            align-items: center;
            justify-content: center;
            backdrop-filter: blur(4px);
        }

        .modal.active {
            display: flex;
        }

        .modal-content {
            background: var(--card);
            border: 1px solid var(--border);
            padding: 35px;
            max-width: 500px;
            width: 90%;
            border-radius: 12px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
        }

        .modal-content h3 {
            margin-top: 0;
            margin-bottom: 15px;
            font-size: 20px;
            color: var(--text);
        }

        .modal-content p {
            margin-bottom: 25px;
            color: var(--text-dim);
            line-height: 1.6;
        }

        .modal-buttons {
            display: flex;
            gap: 10px;
            justify-content: flex-end;
        }

        .modal-buttons button {
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .btn-cancel {
            background: transparent;
            color: var(--text);
            border: 1px solid var(--border);
        }

        .btn-cancel:hover {
            background: var(--bg-secondary);
        }

        .btn-delete {
            background: var(--error);
            color: white;
            border: none;
        }

        .btn-delete:hover {
            background: #ef4444;
            transform: translateY(-1px);
        }

        .subjects-count {
            font-size: 13px;
            color: var(--text-dim);
            font-weight: normal;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .admin-container {
                padding: 30px 20px;
            }

            .admin-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 20px;
            }

            .admin-header-left h1 {
                font-size: 26px;
            }

            .tabs {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }

            .card {
                padding: 25px;
            }

            .user-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <div class="admin-header">
            <div class="admin-header-left">
                <h1><%= school.name %></h1>
                <% if (typeof user !== 'undefined' && user) { %>
                    <p class="welcome-text">Welcome back, <strong><%= user.name %></strong></p>
                <% } %>
            </div>
            <a href="/auth/logout" class="logout-btn">Logout</a>
        </div>

        <div class="stats-row">
            <div class="stat-card">
                <div class="stat-number"><%= teachers.length %></div>
                <div class="stat-label">Teachers</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= students.length %></div>
                <div class="stat-label">Students</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= (school.subjects || []).length %></div>
                <div class="stat-label">Subjects</div>
            </div>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="message error-message">
                <%= error %>
            </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success) { %>
            <div class="message success-message">
                <%= success %>
            </div>
        <% } %>

        <!-- Tabs -->
        <div class="tabs">
            <button class="tab-button active" onclick="openTab('subjects')">Subjects</button>
            <button class="tab-button" onclick="openTab('grades')">Grade Levels</button>
            <button class="tab-button" onclick="openTab('users')">Add User</button>
            <button class="tab-button" onclick="openTab('teachers')">Teachers</button>
            <button class="tab-button" onclick="openTab('students')">Students</button>
        </div>

        <!-- Subjects Tab -->
        <div id="subjects-tab" class="tab-content active">
            <div class="card">
                <h2>Master Subject List</h2>
                
                <% if (school.subjects && school.subjects.length > 0) { %>
                    <div class="subjects-container">
                        <% school.subjects.forEach(function(subject) { %>
                            <div class="subject-pill">
                                <span><%= subject %></span>
                                <button type="button" class="remove-subject" onclick="confirmRemoveSubject('<%= subject %>')" title="Remove subject" aria-label="Remove <%= subject %>">×</button>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p class="no-users" style="margin-bottom: 20px;">No subjects yet. Add your first subject below.</p>
                <% } %>

                <form action="/admin/add-subject" method="POST" class="add-subject-form" onsubmit="return validateSubjectForm()">
                    <div class="form-group">
                        <label for="subjectName">Add New Subject</label>
                        <input 
                            type="text" 
                            id="subjectName" 
                            name="subjectName" 
                            required 
                            placeholder="e.g., Mathematics, English, Science"
                            maxlength="50"
                        >
                    </div>
                    <button type="submit" class="btn-primary">Add Subject</button>
                </form>
            </div>
        </div>

        <!-- Grade Levels Tab -->
        <div id="grades-tab" class="tab-content">
            <div class="card">
                <h2>Assign Subjects to Grade Levels</h2>
                <p style="color: var(--text-dim); font-size: 14px; margin-bottom: 30px;">
                    Choose which subjects are available for each grade level.
                </p>

                <% const classYears = ['9', '10', '11', '12']; %>
                <% const classYearSubjects = school.classYearSubjects || {}; %>
                
                <% classYears.forEach(function(year) { %>
                    <div class="class-year-section">
                        <div class="class-year-header">
                            <h3>Grade <%= year %> 
                                <span class="subjects-count">
                                    (<%= (classYearSubjects[year] || []).length %> subject<%= (classYearSubjects[year] || []).length !== 1 ? 's' : '' %>)
                                </span>
                            </h3>
                        </div>
                        
                        <% if (classYearSubjects[year] && classYearSubjects[year].length > 0) { %>
                            <div class="subjects-container" style="margin-bottom: 15px;">
                                <% classYearSubjects[year].forEach(function(subject) { %>
                                    <div class="subject-pill">
                                        <span><%= subject %></span>
                                        <form action="/admin/remove-subject-from-class" method="POST" style="display: inline; margin: 0;">
                                            <input type="hidden" name="classYear" value="<%= year %>">
                                            <input type="hidden" name="subjectName" value="<%= subject %>">
                                            <button type="submit" class="remove-subject" title="Remove subject">×</button>
                                        </form>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <p style="color: var(--text-dim); font-size: 13px; margin-bottom: 15px;">No subjects assigned to this grade yet.</p>
                        <% } %>
                        
                        <form action="/admin/add-subject-to-class" method="POST" style="display: flex; gap: 10px; align-items: flex-end;">
                            <input type="hidden" name="classYear" value="<%= year %>">
                            <div class="form-group" style="flex: 1; margin-bottom: 0;">
                                <select name="subjectName" required style="width: 100%; padding: 10px 14px; border: 1px solid var(--border); background: var(--card); color: var(--text); border-radius: 8px; font-size: 14px;">
                                    <option value="">Select a subject to add</option>
                                    <% if (school.subjects && school.subjects.length > 0) { %>
                                        <% school.subjects.forEach(function(subject) { %>
                                            <% if (!classYearSubjects[year] || !classYearSubjects[year].includes(subject)) { %>
                                                <option value="<%= subject %>"><%= subject %></option>
                                            <% } %>
                                        <% }); %>
                                    <% } %>
                                </select>
                            </div>
                            <button type="submit" class="btn-primary" style="padding: 10px 20px;">Add</button>
                        </form>
                    </div>
                <% }); %>
            </div>
        </div>

        <!-- Add User Tab -->
        <div id="users-tab" class="tab-content">
            <div class="card">
                <h2>Add New User</h2>

                <form action="/admin/create-user" method="POST">
                    <div class="form-group">
                        <label for="name">Full Name</label>
                        <input 
                            type="text" 
                            id="name" 
                            name="name" 
                            required 
                            autocomplete="name"
                            placeholder="John Smith"
                        >
                    </div>

                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            required 
                            autocomplete="email"
                            placeholder="john.smith@school.edu"
                        >
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            required 
                            autocomplete="new-password"
                            minlength="6"
                            placeholder="Minimum 6 characters"
                        >
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input 
                            type="password" 
                            id="confirmPassword" 
                            name="confirmPassword" 
                            required 
                            autocomplete="new-password"
                            minlength="6"
                            placeholder="Re-enter password"
                        >
                    </div>

                    <div class="form-group">
                        <label for="role">Role</label>
                        <select id="role" name="role" required>
                            <option value="">Select a role</option>
                            <option value="student">Student</option>
                            <option value="teacher">Teacher</option>
                        </select>
                    </div>

                    <div class="form-group" id="classYearGroup" style="display: none;">
                        <label for="classYear">Grade Level</label>
                        <select id="classYear" name="classYear">
                            <option value="">Select grade</option>
                            <option value="9">9th Grade</option>
                            <option value="10">10th Grade</option>
                            <option value="11">11th Grade</option>
                            <option value="12">12th Grade</option>
                        </select>
                    </div>
                
                    <div class="form-group" id="subjectGroup" style="display: none;">
                        <label for="subject">Subject (Optional)</label>
                        <select id="subject" name="subject">
                            <option value="">Select subject (optional)</option>
                            <% if (school.subjects && school.subjects.length > 0) { %>
                                <% school.subjects.forEach(function(subject) { %>
                                    <option value="<%= subject %>"><%= subject %></option>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>

                    <button type="submit" class="btn-primary">Create User</button>
                </form>
            </div>
        </div>

        <!-- Teachers Tab -->
        <div id="teachers-tab" class="tab-content">
            <div class="card">
                <h2>Teachers (<span id="teacher-count"><%=teachers.length%></span>)</h2>
                
                <% if (teachers.length > 0) { %>
                    <div class="filter-group">
                        <label for="subject-filter">Filter:</label>
                        <select id="subject-filter" onchange="filterTeachers()">
                            <option value="all">All Subjects</option>
                            <% if (school.subjects && school.subjects.length > 0) { %>
                                <% school.subjects.forEach(function(subject) { %>
                                    <option value="<%= subject %>"><%= subject %></option>
                                <% }); %>
                            <% } %>
                            <option value="none">No Subject Assigned</option>
                        </select>
                    </div>

                    <div class="users-grid" id="teachers-grid">
                        <% teachers.forEach(function(t) { %>
                            <div class="user-item teacher-item" data-subject="<%= t.subject || 'none' %>">
                                <div class="user-info">
                                    <strong><%= t.name %></strong>
                                    <span class="user-email"><%= t.email %></span>
                                    <% if (t.subject) { %>
                                        <span class="user-email"> • <%= t.subject %></span>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                    
                    <p class="no-users" id="no-teachers-filtered" style="display: none;">
                        No teachers found for this subject.
                    </p>
                <% } else { %>
                    <p class="no-users">No teachers yet. Add your first teacher in the "Add User" tab.</p>
                <% } %>
            </div>
        </div>

        <!-- Students Tab -->
        <div id="students-tab" class="tab-content">
            <div class="card">
                <h2>Students (<span id="student-count"><%=students.length%></span>)</h2>
                
                <% if (students.length > 0) { %>
                    <div class="filter-group">
                        <label for="class-filter">Filter:</label>
                        <select id="class-filter" onchange="filterStudents()">
                            <option value="all">All Grades</option>
                            <option value="9">9th Grade</option>
                            <option value="10">10th Grade</option>
                            <option value="11">11th Grade</option>
                            <option value="12">12th Grade</option>
                            <option value="none">No Grade Assigned</option>
                        </select>
                    </div>

                    <div class="users-grid" id="students-grid">
                        <% students.forEach(function(s) { %>
                            <div class="user-item student-item" data-classyear="<%= s.classYear || 'none' %>">
                                <div class="user-info">
                                    <strong><%= s.name %></strong>
                                    <span class="user-email"><%= s.email %></span>
                                    <% if (s.classYear) { %>
                                        <span class="user-email"> • Grade <%= s.classYear %></span>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                    
                    <p class="no-users" id="no-students-filtered" style="display: none;">
                        No students found for this grade.
                    </p>
                <% } else { %>
                    <p class="no-users">No students yet. Add your first student in the "Add User" tab.</p>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Confirmation Modal -->
    <div id="deleteModal" class="modal">
        <div class="modal-content">
            <h3>Confirm Subject Deletion</h3>
            <p id="modal-message"></p>
            <div class="modal-buttons">
                <button type="button" class="btn-cancel" onclick="closeModal()">Cancel</button>
                <button type="button" class="btn-delete" onclick="deleteSubject()">Delete Subject</button>
            </div>
        </div>
    </div>

    <script type="application/json" id="school-subjects-data">
        <%- JSON.stringify(school.subjects || []) %>
    </script>

    <script>
        let subjectToDelete = null;
        const schoolSubjects = JSON.parse(document.getElementById('school-subjects-data').textContent);

        // Tab Management
        function openTab(tabName) {
            // Hide all tab contents
            const tabContents = document.querySelectorAll('.tab-content');
            tabContents.forEach(content => {
                content.classList.remove('active');
            });

            // Remove active class from all buttons
            const tabButtons = document.querySelectorAll('.tab-button');
            tabButtons.forEach(button => {
                button.classList.remove('active');
            });

            // Show the selected tab
            document.getElementById(tabName + '-tab').classList.add('active');
            
            // Add active class to the clicked button
            event.target.classList.add('active');
        }

        // Subject Management Functions
        function validateSubjectForm() {
            const subjectName = document.getElementById('subjectName').value.trim();
            
            if (!subjectName) {
                alert('Please enter a subject name');
                return false;
            }

            // Check for duplicates
            if (schoolSubjects.some(s => s.toLowerCase() === subjectName.toLowerCase())) {
                alert('This subject already exists');
                return false;
            }

            return true;
        }

        async function confirmRemoveSubject(subjectName) {
            subjectToDelete = subjectName;
            
            try {
                // Check if subject is in use
                const response = await fetch('/admin/check-subject-usage', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ subjectName })
                });

                const data = await response.json();
                
                const modal = document.getElementById('deleteModal');
                const message = document.getElementById('modal-message');
                
                if (data.inUse && data.count > 0) {
                    message.innerHTML = `Warning: This subject is currently assigned to <strong>${data.count} teacher(s)</strong>. Deleting it will not affect existing teacher assignments, but the subject will no longer be available for new assignments.<br><br>Are you sure you want to delete "<strong>${subjectName}</strong>"?`;
                } else {
                    message.innerHTML = `Are you sure you want to delete the subject "<strong>${subjectName}</strong>"?`;
                }
                
                modal.classList.add('active');
            } catch (error) {
                console.error('Error checking subject usage:', error);
                alert('Error checking subject usage. Please try again.');
            }
        }

        function closeModal() {
            const modal = document.getElementById('deleteModal');
            modal.classList.remove('active');
            subjectToDelete = null;
        }

        function deleteSubject() {
            if (!subjectToDelete) return;
            
            // Create and submit form
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/admin/remove-subject';
            
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'subjectName';
            input.value = subjectToDelete;
            
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('deleteModal');
            if (event.target === modal) {
                closeModal();
            }
        }

        function toggleRoleFields() {
            const role = document.getElementById('role').value;
            const classYearGroup = document.getElementById('classYearGroup');
            const classYearSelect = document.getElementById('classYear');
            const subjectGroup = document.getElementById('subjectGroup');
            const subjectSelect = document.getElementById('subject');
            
            if (role === 'student') {
                classYearGroup.style.display = 'block';
                classYearSelect.required = true;
                subjectGroup.style.display = 'none';
                subjectSelect.required = false;
                subjectSelect.value = '';
            } else if (role === 'teacher') {
                classYearGroup.style.display = 'none';
                classYearSelect.required = false;
                classYearSelect.value = '';
                subjectGroup.style.display = 'block';
                subjectSelect.required = false;
            } else {
                classYearGroup.style.display = 'none';
                classYearSelect.required = false;
                classYearSelect.value = '';
                subjectGroup.style.display = 'none';
                subjectSelect.required = false;
                subjectSelect.value = '';
            }
        }

        function filterTeachers() {
            const selectedSubject = document.getElementById('subject-filter').value;
            const teacherItems = document.querySelectorAll('.teacher-item');
            const noTeachersMsg = document.getElementById('no-teachers-filtered');
            const teacherCount = document.getElementById('teacher-count');
            
            let visibleCount = 0;
            
            teacherItems.forEach(function(item) {
                const teacherSubject = item.getAttribute('data-subject');
                
                if (selectedSubject === 'all' || teacherSubject === selectedSubject) {
                    item.style.display = 'flex';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                }
            });
            
            teacherCount.textContent = visibleCount;
            
            if (visibleCount === 0) {
                noTeachersMsg.style.display = 'block';
            } else {
                noTeachersMsg.style.display = 'none';
            }
        }

        function filterStudents() {
            const selectedClass = document.getElementById('class-filter').value;
            const studentItems = document.querySelectorAll('.student-item');
            const noStudentsMsg = document.getElementById('no-students-filtered');
            const studentCount = document.getElementById('student-count');
            
            let visibleCount = 0;
            
            studentItems.forEach(function(item) {
                const studentClass = item.getAttribute('data-classyear');
                
                if (selectedClass === 'all' || studentClass === selectedClass) {
                    item.style.display = 'flex';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                }
            });
            
            studentCount.textContent = visibleCount;
            
            if (visibleCount === 0) {
                noStudentsMsg.style.display = 'block';
            } else {
                noStudentsMsg.style.display = 'none';
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const roleSelect = document.getElementById('role');
            if (roleSelect) {
                roleSelect.addEventListener('change', toggleRoleFields);
            }
        });
    </script>
</body>
</html>


