<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Online Gradebook</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            display: block;
            padding: 0;
            align-items: flex-start;
            min-height: 100vh;
        }

        .admin-container {
            max-width: 1000px;
            width: 100%;
            margin: 0 auto;
            padding: 40px 20px;
        }
        
        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            padding-bottom: 20px;
            border-bottom: 1px solid var(--border);
        }

        .admin-header h1 {
            font-size: 32px;
            font-weight: 600;
            margin: 0;
            text-align: left;
            background: linear-gradient(135deg, var(--accent) 0%, var(--text-dim) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .welcome-text {
            color: var(--text-dim);
            font-size: 14px;
            margin-bottom: 30px;
        }

        .welcome-text strong {
            color: var(--text);
            font-weight: 500;
        }

        .admin-card {
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: 8px;
            padding: 30px;
            margin-bottom: 30px;
            transition: border-color 0.2s ease;
        }

        .admin-card:hover {
            border-color: #3a3a3a;
        }

        .admin-card h2 {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 25px;
            color: var(--text);
        }
        
        .user-list {
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: 8px;
            padding: 30px;
        }

        .user-list h2 {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 20px;
            color: var(--text);
        }

        .users-grid {
            display: grid;
            gap: 12px;
        }
        
        .user-item {
            background: var(--bg);
            border: 1px solid var(--border);
            border-radius: 6px;
            padding: 16px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.2s ease;
        }

        .user-item:hover {
            border-color: #3a3a3a;
            transform: translateX(2px);
        }
        
        .user-info {
            flex: 1;
        }

        .user-info strong {
            color: var(--text);
            font-size: 15px;
            font-weight: 500;
            display: block;
            margin-bottom: 4px;
        }

        .user-email {
            color: var(--text-dim);
            font-size: 13px;
        }
        
        .user-role {
            display: inline-flex;
            align-items: center;
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border: 1px solid;
        }
        
        .role-admin { 
            background: rgba(239, 68, 68, 0.1);
            color: #ef4444;
            border-color: rgba(239, 68, 68, 0.2);
        }
        
        .role-teacher { 
            background: rgba(59, 130, 246, 0.1);
            color: #3b82f6;
            border-color: rgba(59, 130, 246, 0.2);
        }
        
        .role-student { 
            background: rgba(74, 222, 128, 0.1);
            color: #4ade80;
            border-color: rgba(74, 222, 128, 0.2);
        }
        
        .logout-btn {
            background: transparent;
            color: var(--text);
            padding: 10px 18px;
            text-decoration: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 500;
            border: 1px solid var(--border);
            transition: all 0.2s ease;
            display: inline-block;
        }

        .logout-btn:hover {
            background: var(--bg);
            border-color: var(--error);
            color: var(--error);
        }

        .no-users {
            text-align: center;
            padding: 40px 20px;
            color: var(--text-dim);
            font-size: 14px;
        }

        /* Form specific styles for admin */
        .admin-card .form-group {
            margin-bottom: 20px;
        }

        .admin-card .btn-primary {
            margin-top: 10px;
            background: var(--accent);
            color: var(--bg);
            font-weight: 500;
        }

        .admin-card .btn-primary:hover {
            background: var(--text);
        }

        /* Messages */
        .error-message,
        .success-message {
            padding: 14px 18px;
            border-radius: 6px;
            margin-bottom: 20px;
            font-size: 14px;
            border: 1px solid;
        }

        .error-message {
            background: rgba(248, 113, 113, 0.1);
            border-color: rgba(248, 113, 113, 0.2);
            color: var(--error);
        }

        .success-message {
            background: rgba(74, 222, 128, 0.1);
            border-color: rgba(74, 222, 128, 0.2);
            color: var(--success);
        }

        /* Stats row (optional enhancement) */
        .stats-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: 8px;
            padding: 20px;
            text-align: center;
        }

        .stat-number {
            font-size: 32px;
            font-weight: 600;
            color: var(--accent);
            margin-bottom: 5px;
        }

        .stat-label {
            font-size: 13px;
            color: var(--text-dim);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .admin-container {
                padding: 20px 15px;
            }

            .admin-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }

            .admin-header h1 {
                font-size: 24px;
            }

            .admin-card,
            .user-list {
                padding: 20px;
            }

            .user-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <div class="admin-header">
            <h1>School Admin Panel</h1>
            <a href="/auth/logout" class="logout-btn">Logout</a>
        </div>

        <% if (typeof user !== 'undefined' && user) { %>
            <p class="welcome-text">Welcome back, <strong><%= user.name %></strong> â€¢ <strong><%= school.name %></strong></p>
        <% } %>
        <div class="stats-row">
            <div class="stat-card">
                <div class="stat-number"><%= teachers.length %></div>
                <div class="stat-label">Teachers</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= students.length %></div>
                <div class="stat-label">Students</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= teachers.length + students.length %></div>
                <div class="stat-label">Total Users</div>
            </div>
        </div>

        <div class="admin-card">
            <h2>Add Teacher or Student</h2>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>

            <% if (typeof success !== 'undefined' && success) { %>
                <div class="success-message">
                    <%= success %>
                </div>
            <% } %>

            <form action="/admin/create-user" method="POST">
                <div class="form-group">
                    <label for="name">Full Name:</label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        required 
                        autocomplete="name"
                        placeholder="Enter user's full name"
                    >
                </div>

                <div class="form-group">
                    <label for="email">Email:</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        required 
                        autocomplete="email"
                        placeholder="Enter user's email"
                    >
                </div>

                <div class="form-group">
                    <label for="password">Password:</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        required 
                        autocomplete="new-password"
                        minlength="6"
                        placeholder="Minimum 6 characters"
                    >
                </div>

                <div class="form-group">
                    <label for="role">Role:</label>
                    <select id="role" name="role" required>
                        <option value="">Select a role</option>
                        <option value="student">Student</option>
                        <option value="teacher">Teacher</option>
                    </select>
                </div>

                <button type="submit" class="btn-primary">Add User to School</button>
            </form>
        </div>

        <!-- Teachers List -->
        <div class="user-list">
            <h2>Teachers (<%=teachers.length%>)</h2>
            <% if (teachers.length > 0) { %>
                <div class="users-grid">
                    <% teachers.forEach(function(t) { %>
                        <div class="user-item">
                            <div class="user-info">
                                <strong><%= t.name %></strong>
                                <span class="user-email"><%= t.email %></span>
                            </div>
                            <span class="user-role role-teacher">Teacher</span>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p class="no-users">No teachers yet. Add your first teacher above.</p>
            <% } %>
        </div>

        <!-- Students List -->
        <div class="user-list">
            <h2>Students (<%=students.length%>)</h2>
            <% if (students.length > 0) { %>
                <div class="users-grid">
                    <% students.forEach(function(s) { %>
                        <div class="user-item">
                            <div class="user-info">
                                <strong><%= s.name %></strong>
                                <span class="user-email"><%= s.email %></span>
                            </div>
                            <span class="user-role role-student">Student</span>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p class="no-users">No students yet. Add your first student above.</p>
            <% } %>
        </div>
    </div>
</body>
</html>

