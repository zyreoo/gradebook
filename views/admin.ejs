<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Online Gradebook</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            display: block;
            padding: 0;
            align-items: flex-start;
            min-height: 100vh;
        }

        .admin-container {
            max-width: 1000px;
            width: 100%;
            margin: 0 auto;
            padding: 40px 20px;
        }
        
        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            padding-bottom: 20px;
            border-bottom: 1px solid var(--border);
        }

        .admin-header h1 {
            font-size: 28px;
            font-weight: 600;
            margin: 0;
        }
        
        .welcome-text {
            color: var(--text-dim);
            font-size: 14px;
            margin-bottom: 30px;
        }

        .welcome-text strong {
            color: var(--text);
            font-weight: 500;
        }

        .admin-card {
            background: var(--card);
            border: 1px solid var(--border);
            padding: 30px;
            margin-bottom: 30px;
        }

        .admin-card h2 {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 25px;
            color: var(--text);
        }
        
        .user-list {
            background: var(--card);
            border: 1px solid var(--border);
            padding: 30px;
            margin-bottom: 30px;
        }

        .user-list h2 {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 20px;
            color: var(--text);
        }

        .users-grid {
            display: grid;
            gap: 12px;
        }
        
        .user-item {
            background: var(--bg);
            border: 1px solid var(--border);
            padding: 16px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .user-info {
            flex: 1;
        }

        .user-info strong {
            color: var(--text);
            font-size: 15px;
            font-weight: 500;
            display: block;
            margin-bottom: 4px;
        }

        .user-email {
            color: var(--text-dim);
            font-size: 13px;
        }
        
        .user-role {
            padding: 4px 8px;
            font-size: 12px;
            border: 1px solid var(--border);
        }
        
        .role-admin { 
            color: var(--text);
        }
        
        .role-teacher { 
            color: var(--text);
        }
        
        .role-student { 
            color: var(--text);
        }
        
        .logout-btn {
            background: transparent;
            color: var(--text);
            padding: 8px 16px;
            text-decoration: none;
            font-size: 14px;
            border: 1px solid var(--border);
            display: inline-block;
        }

        .no-users {
            text-align: center;
            padding: 40px 20px;
            color: var(--text-dim);
            font-size: 14px;
        }

        /* Form specific styles for admin */
        .admin-card .form-group {
            margin-bottom: 20px;
        }

        .admin-card .btn-primary {
            margin-top: 10px;
        }

        /* Messages */
        .error-message,
        .success-message {
            padding: 12px;
            margin-bottom: 20px;
            font-size: 14px;
            border: 1px solid var(--border);
        }

        .error-message {
            color: var(--error);
        }

        .success-message {
            color: var(--success);
        }

        /* Stats row (optional enhancement) */
        .stats-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: var(--card);
            border: 1px solid var(--border);
            padding: 20px;
            text-align: center;
        }

        .stat-number {
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .stat-label {
            font-size: 14px;
            color: var(--text-dim);
        }

        /* Filter group */
        .filter-group {
            margin-bottom: 20px;
            padding: 12px;
            border: 1px solid var(--border);
        }

        .filter-group label {
            font-size: 14px;
            color: var(--text);
            margin-right: 10px;
        }

        .filter-group select {
            padding: 6px 10px;
            border: 1px solid var(--border);
            background: var(--card);
            color: var(--text);
            font-size: 14px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .admin-container {
                padding: 20px 15px;
            }

            .admin-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }

            .admin-header h1 {
                font-size: 24px;
            }

            .admin-card,
            .user-list {
                padding: 20px;
            }

            .user-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <div class="admin-header">
            <h1>School Admin Panel</h1>
            <a href="/auth/logout" class="logout-btn">Logout</a>
        </div>

        <% if (typeof user !== 'undefined' && user) { %>
            <p class="welcome-text">Welcome back, <strong><%= user.name %></strong> • <strong><%= school.name %></strong></p>
        <% } %>
        <div class="stats-row">
            <div class="stat-card">
                <div class="stat-number"><%= teachers.length %></div>
                <div class="stat-label">Teachers</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= students.length %></div>
                <div class="stat-label">Students</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= teachers.length + students.length %></div>
                <div class="stat-label">Total Users</div>
            </div>
        </div>

        <div class="admin-card">
            <h2>Add Teacher or Student</h2>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>

            <% if (typeof success !== 'undefined' && success) { %>
                <div class="success-message">
                    <%= success %>
                </div>
            <% } %>

            <form action="/admin/create-user" method="POST">
                <div class="form-group">
                    <label for="name">Full Name:</label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        required 
                        autocomplete="name"
                        placeholder="Enter user's full name"
                    >
                </div>

                <div class="form-group">
                    <label for="email">Email:</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        required 
                        autocomplete="email"
                        placeholder="Enter user's email"
                    >
                </div>

                <div class="form-group">
                    <label for="password">Password:</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        required 
                        autocomplete="new-password"
                        minlength="6"
                        placeholder="Minimum 6 characters"
                    >
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirm Password:</label>
                    <input 
                        type="password" 
                        id="confirmPassword" 
                        name="confirmPassword" 
                        required 
                        autocomplete="new-password"
                        minlength="6"
                        placeholder="Re-enter password"
                    >
                </div>

                <div class="form-group">
                    <label for="role">Role:</label>
                    <select id="role" name="role" required>
                        <option value="">Select a role</option>
                        <option value="student">Student</option>
                        <option value="teacher">Teacher</option>
                    </select>
                </div>

                <div class="form-group" id="classYearGroup" style="display: none;">
                    <label for="classYear">Grade Level:</label>
                    <select id="classYear" name="classYear">
                        <option value="">-- Select Grade --</option>
                        <option value="9">9th Grade</option>
                        <option value="10">10th Grade</option>
                        <option value="11">11th Grade</option>
                        <option value="12">12th Grade</option>
                    </select>
                </div>
            
                <!-- For TEACHERS: Subject -->
                <div class="form-group" id="subjectGroup" style="display: none;">
                    <label for="subject">Subject:</label>
                    <select id="subject" name="subject">
                        <option value="">-- Select Subject --</option>
                        <option value="Mathematics">Mathematics</option>
                        <option value="English">English</option>
                        <option value="Science">Science</option>
                        <option value="History">History</option>
                        <option value="Geography">Geography</option>
                        <option value="Physics">Physics</option>
                        <option value="Chemistry">Chemistry</option>
                        <option value="Biology">Biology</option>
                        <option value="Physical Education">Physical Education</option>
                        <option value="Art">Art</option>
                        <option value="Music">Music</option>
                        <option value="Computer Science">Computer Science</option>
                        <option value="Foreign Language">Foreign Language</option>
                        <option value="Other">Other</option>
                    </select>
                </div>

                <button type="submit" class="btn-primary">Add User to School</button>
            </form>
        </div>

        <!-- Teachers List -->
        <div class="user-list">
            <h2>Teachers (<span id="teacher-count"><%=teachers.length%></span>)</h2>
            
            <% if (teachers.length > 0) { %>
                <!-- Subject Filter -->
                <div class="filter-group">
                    <label for="subject-filter">Filter by Subject:</label>
                    <select id="subject-filter" onchange="filterTeachers()">
                        <option value="all">All Subjects</option>
                        <option value="Mathematics">Mathematics</option>
                        <option value="English">English</option>
                        <option value="Science">Science</option>
                        <option value="History">History</option>
                        <option value="Geography">Geography</option>
                        <option value="Physics">Physics</option>
                        <option value="Chemistry">Chemistry</option>
                        <option value="Biology">Biology</option>
                        <option value="Physical Education">Physical Education</option>
                        <option value="Art">Art</option>
                        <option value="Music">Music</option>
                        <option value="Computer Science">Computer Science</option>
                        <option value="Foreign Language">Foreign Language</option>
                        <option value="Other">Other</option>
                        <option value="none">No Subject Assigned</option>
                    </select>
                </div>

                <div class="users-grid" id="teachers-grid">
                    <% teachers.forEach(function(t) { %>
                        <div class="user-item teacher-item" data-subject="<%= t.subject || 'none' %>">
                            <div class="user-info">
                                <strong><%= t.name %></strong>
                                <span class="user-email"><%= t.email %></span>
                                <% if (t.subject) { %>
                                    <span class="user-email"> • <%= t.subject %></span>
                                <% } %>
                            </div>
                            <span class="user-role role-teacher">Teacher</span>
                        </div>
                    <% }); %>
                </div>
                
                <p class="no-users" id="no-teachers-filtered" style="display: none;">
                    No teachers found for this subject.
                </p>
            <% } else { %>
                <p class="no-users">No teachers yet. Add your first teacher above.</p>
            <% } %>
        </div>

        <!-- Students List -->
        <div class="user-list">
            <h2>Students (<span id="student-count"><%=students.length%></span>)</h2>
            
            <% if (students.length > 0) { %>
                <!-- Class Year Filter -->
                <div class="filter-group">
                    <label for="class-filter">Filter by Grade:</label>
                    <select id="class-filter" onchange="filterStudents()">
                        <option value="all">All Grades</option>
                        <option value="9">9th Grade</option>
                        <option value="10">10th Grade</option>
                        <option value="11">11th Grade</option>
                        <option value="12">12th Grade</option>
                        <option value="none">No Grade Assigned</option>
                    </select>
                </div>

                <div class="users-grid" id="students-grid">
                    <% students.forEach(function(s) { %>
                        <div class="user-item student-item" data-classyear="<%= s.classYear || 'none' %>">
                            <div class="user-info">
                                <strong><%= s.name %></strong>
                                <span class="user-email"><%= s.email %></span>
                                <% if (s.classYear) { %>
                                    <span class="user-email"> • Grade <%= s.classYear %></span>
                                <% } %>
                            </div>
                            <span class="user-role role-student">Student</span>
                        </div>
                    <% }); %>
                </div>
                
                <p class="no-users" id="no-students-filtered" style="display: none;">
                    No students found for this grade.
                </p>
            <% } else { %>
                <p class="no-users">No students yet. Add your first student above.</p>
            <% } %>
        </div>
    </div>

    <script>
        function toggleRoleFields() {
            const role = document.getElementById('role').value;
            const classYearGroup = document.getElementById('classYearGroup');
            const classYearSelect = document.getElementById('classYear');
            const subjectGroup = document.getElementById('subjectGroup');
            const subjectSelect = document.getElementById('subject');
            
            if (role === 'student') {
                classYearGroup.style.display = 'block';
                classYearSelect.required = true;
                subjectGroup.style.display = 'none';
                subjectSelect.required = false;
                subjectSelect.value = '';
            } else if (role === 'teacher') {
                classYearGroup.style.display = 'none';
                classYearSelect.required = false;
                classYearSelect.value = '';
                subjectGroup.style.display = 'block';
                subjectSelect.required = false;
            } else {
                classYearGroup.style.display = 'none';
                classYearSelect.required = false;
                classYearSelect.value = '';
                subjectGroup.style.display = 'none';
                subjectSelect.required = false;
                subjectSelect.value = '';
            }
        }

        function filterTeachers() {
            const selectedSubject = document.getElementById('subject-filter').value;
            const teacherItems = document.querySelectorAll('.teacher-item');
            const noTeachersMsg = document.getElementById('no-teachers-filtered');
            const teacherCount = document.getElementById('teacher-count');
            
            let visibleCount = 0;
            
            teacherItems.forEach(function(item) {
                const teacherSubject = item.getAttribute('data-subject');
                
                if (selectedSubject === 'all' || teacherSubject === selectedSubject) {
                    item.style.display = 'flex';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                }
            });
            
            teacherCount.textContent = visibleCount;
            
            if (visibleCount === 0) {
                noTeachersMsg.style.display = 'block';
            } else {
                noTeachersMsg.style.display = 'none';
            }
        }

        function filterStudents() {
            const selectedClass = document.getElementById('class-filter').value;
            const studentItems = document.querySelectorAll('.student-item');
            const noStudentsMsg = document.getElementById('no-students-filtered');
            const studentCount = document.getElementById('student-count');
            
            let visibleCount = 0;
            
            studentItems.forEach(function(item) {
                const studentClass = item.getAttribute('data-classyear');
                
                if (selectedClass === 'all' || studentClass === selectedClass) {
                    item.style.display = 'flex';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                }
            });
            
            studentCount.textContent = visibleCount;
            
            if (visibleCount === 0) {
                noStudentsMsg.style.display = 'block';
            } else {
                noStudentsMsg.style.display = 'none';
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const roleSelect = document.getElementById('role');
            if (roleSelect) {
                roleSelect.addEventListener('change', toggleRoleFields);
            }
        });
    </script>
</body>
</html>

